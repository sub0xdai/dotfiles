# i3 config file (v4)
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

#====================
# BASIC SETTINGS
#====================

# Set Mod key (Windows key)
set $mod Mod4

# Set GTK theme
set $theme 'Catppuccin-Mocha-Standard-Sky-Dark'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme $theme

# Set font
font pango:JetBrainsMono Nerd Font 14

#====================
# APPEARANCE
#====================

# Set gaps
gaps inner 7
gaps outer 2
smart_gaps off

# Border and title bar settings
for_window [class=".*"] border pixel 2
hide_edge_borders none
smart_borders on

# Border colors
client.focused          #D1B3E8 #D1B3E8 #D1B3E8 #D1B3E8
client.unfocused        #9B8BB5 #9B8BB5 #9B8BB5 #9B8BB5
client.focused_inactive #9B8BB5 #9B8BB5 #9B8BB5 #9B8BB5
client.urgent           #9B8BB5 #9B8BB5 #9B8BB5 #9B8BB5

#====================
# DISPLAY SETUP
#====================

# Configure monitors and cursor
exec_always --no-startup-id xrandr --output HDMI-0 --primary --mode 3840x2160 --output DP-1 --mode 1920x1080 --left-of HDMI-0
exec_always --no-startup-id xsetroot -cursor_name left_ptr
exec_always --no-startup-id gsettings set org.gnome.desktop.interface cursor-theme 'capitaine-cursors'
exec_always --no-startup-id gsettings set org.gnome.desktop.interface cursor-size 24
exec_always --no-startup-id echo "Xcursor.size: 24" > ~/.Xresources
exec_always --no-startup-id xrdb -merge ~/.Xresources
exec_always --no-startup-id gsettings set org.gnome.settings-daemon.plugins.xsettings overrides "{'Gdk/WindowScalingFactor': <2>}"
exec_always --no-startup-id gsettings set org.gnome.desktop.interface scaling-factor 2


#====================
# WALLPAPERS
#====================

exec_always --no-startup-id feh --randomize --bg-scale ~/Pictures/wallpapers/*


#  floating
for_window [class="gnome-calculator"] floating enable
for_window [class="nautilus"] floating enable
for_window [class="gnome-text-editor"] floating enable

#====================
# AUTOSTART APPLICATIONS
#====================

exec_always --no-startup-id killall polybar
exec_always --no-startup-id ~/.config/polybar/launch_polybar.sh
exec --no-startup-id dex --autostart --environment i3
exec --no-startup-id blueman-applet
exec --no-startup-id nm-applet
exec_always --no-startup-id picom -b --config ~/.config/picom/picom.conf
exec_always --no-startup-id /home/sub0x/autotiling/target/release/autotiling &
exec_always --no-startup-id gsettings set org.gnome.desktop.interface gtk-theme $theme
exec_always --no-startup-id gsettings set org.gnome.desktop.interface icon-theme "Papirus-Dark"
exec --no-startup-id xidlehook --timer 2500 '/home/sub0x/dotfiles/scripts/betterlock_single_display.sh' ''
exec --no-startup-id xfce4-power-manager
exec --no-startup-id gammastep
exec_always --no-startup-id xmodmap ~/.Xmodmap


#====================
# AUDIO CONTROLS
#====================

set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

#===================
# KEY BINDINGS
#====================

# Application launchers
bindsym $mod+Return exec alacritty
bindsym $mod+Shift+o exec ~/Applications/Obsidian-1.6.7.AppImage
bindsym $mod+Mod1+l exec --no-startup-id ~/dotfiles/scripts/betterlock_single_display.sh
bindsym $mod+Shift+s exec --no-startup-id flameshot gui
bindsym $mod+d exec --no-startup-id dmenu_run
bindsym $mod+e exec nautilus
bindsym $mod+p exec rofi -show combi
bindsym $mod+w exec zen-browser

# Window management
bindsym $mod+q kill
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+t layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+space focus mode_toggle
bindsym $mod+a focus parent

# Resize mode
mode "resize" {
    bindsym j resize shrink width 10 px or 10 ppt
    bindsym k resize grow height 10 px or 10 ppt
    bindsym l resize shrink height 10 px or 10 ppt
    bindsym semicolon resize grow width 10 px or 10 ppt
    bindsym Left resize grow width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize shrink width 10 px or 10 ppt
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

#====================
# WORKSPACE SETTINGS
#====================

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "0"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# Assign workspace to monitor 
workspace $ws1  output DP-1
workspace $ws2  output HDMI-0
workspace $ws3  output HDMI-0
workspace $ws4  output HDMI-0
workspace $ws5  output HDMI-0
workspace $ws6  output HDMI-0
workspace $ws7  output HDMI-0
workspace $ws8  output HDMI-0
workspace $ws9  output HDMI-0
workspace $ws10  output DP-1







#====================
# MISCELLANEOUS
#====================

# Use Mouse+$mod to drag floating windows
floating_modifier $mod

# Enable dragging of tiling windows
tiling_drag modifier titlebar

# Reload the configuration file
bindsym $mod+Shift+c reload

# Restart i3 inplace
bindsym $mod+Shift+r restart

# Exit i3
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

# Start XDG autostart .desktop files using dex
exec --no-startup-id dex --autostart --environment i3
